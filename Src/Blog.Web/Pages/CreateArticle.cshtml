@page
@model Blog.Web.Pages.CreateArticleModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "CreateArticle";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create Article</h1>

<form method="post">

    @Html.AntiForgeryToken();
    <label asp-for="Subject">
        <input type="text" asp-for="Subject" />
    </label>
    <label asp-for="Body">
        <textarea asp-for="Body"></textarea>
    </label>

    <input type="submit" />

</form>